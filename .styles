* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-size: 100%;
  font-family: 'Lato', sans-serif;
}

body {
  background-color: #3b3b4f;
  color: #ffffff;
  font-family: Tahoma, sans-serif;
  display: flex; 
  flex-direction: column; 
  justify-content: center; 
  align-items: center; 
  margin: 0;
  height: 100vh;
  text-align: center;
}

h1, i {
padding: 20px;
color: #ffffff
}

p {
  letter-spacing: 1px;
  padding: 20px;
  font-size: 1.2rem
}

#user-input {
  background-color: #3b3b4f;
  border: 2px solid #ffffff;
  color: #ffffff;
  border-radius: 50px;
  width: 50%; 
  min-height: 2em;
  padding: 10px;
  font-size: 1rem;
  text-align: center;
}

.button-container {
  display: flex;
  justify-content: space-between;
  gap: 10px;
}

button {
  width: 50px; 
  height: 50px;
  font-size: 0.9rem; 
  cursor: pointer;
  border-radius: 50%; 
  margin-top: 20px;
  border: 2px solid #ffffff;
  display: flex; 
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: #4CAF50; 
  color: white; 
}

#results-div {
  padding: 20px;
}
